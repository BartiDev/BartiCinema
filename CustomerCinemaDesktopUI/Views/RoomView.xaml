<UserControl x:Class="CustomerCinemaDesktopUI.Views.RoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomerCinemaDesktopUI.Views"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="{Binding Room.Name}" FontSize="32" HorizontalAlignment="Center"/>
            <TextBlock Text="Choose your seats" FontSize="20" HorizontalAlignment="Center"/>
        </StackPanel>
        <ContentControl x:Name="ActiveItem"/>
    </DockPanel>
</UserControl>
